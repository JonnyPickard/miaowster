<h2>Trending</h2>

<div class="trending-images">
  <% if @images.any? %>
    <% @images.each do | image | %>
      <h2><%= link_to image.title, image_path(image) %></h2>
      <%= image_tag image.picture.url(:medium) %>
      <h3 class="image-description">
        <%= image.description %>
      </h3>
      <h3>
        <%= pluralize image.endorsements.count, "endorsements" %>
      </h3>
      <h4>
        <%= link_to "Endorse Image", image_endorsements_path(image), method: :post, id: "endorse_#{image.id}" %>
      </h4>
    <% end %>
  <% else %>
    <%= "No pictures have been uploaded yet!" %>
  <% end %>
</div>
