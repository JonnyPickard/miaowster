<% if @images.any? %>
  <% @images.each do |image| %>
    <h2><%= link_to image.title, image_path(image) %></h2>
    <h3>Description: <%= image.description %></h3>
    <%= image_tag image.picture.url(:medium) %>
    <h4><%= link_to "Edit #{image.title}", edit_image_path(image) %></h4>
    <h4><%= link_to "Delete #{image.title}", image_path(image), method: :delete %></h4>
  <% end %>
<% else %>
  <h1>No images yet!</h1>
<% end %>

<a href="/images/new">Upload an image</a>
