<h2>Upload a new image!</h2>

<div class="upload-image-form">
  <%= form_for @image do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
    </div>
    <div class="actions">
      <%= f.submit :Upload %>
    </div>
  <% end %>
</div>
